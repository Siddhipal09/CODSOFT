<div class="author">
    <h1 class="author_heading">Blog Town</h1>
    <p class="author_body">Your World of Words</p>
</div>
<img src="/img/img1.jpg" alt="" class="hero-image" width="981" height="528">
<section class="articles">
    <h2 class="articles_heading">Latest Posts</h2>
    <ul class="article-ul">

        <% data.forEach(post => { %>
          <li>
            <a href="/post/<%= post._id%>">
                <span><%= post.title %></span>
                <span class="article-list_date"><%= post.createdAt.toDateString()%></span>
            </a>
        </li>
        <% }) %>
       
    </ul>
    
</section>